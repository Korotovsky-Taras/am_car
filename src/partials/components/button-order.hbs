<div class="hidden">
    <div id="ordering-modal">
        <div class="h1">Заказать авто</div>
        {{> components/ordering-expert-form }}
    </div>
</div>
<button class="app-btn btn-primary btn-size-m js-ordering-button" data-modal="ordering-modal">
    <span>Заказать авто</span>
</button>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll('.js-ordering-button').forEach(button => {
            const {modal: modalId, closable: isClosable = true} = button.dataset;
            const modal = new AppModal(modalId);
            modal.setClosable(isClosable)
            button.addEventListener('click', () => modal.open());
        });
    })
</script>